{
  "name": "lovable-mac-app",
  "version": "1.0.0",
  "description": "Intel Mac app for Lovable.dev",
  "main": "main.js",
  "scripts": {
    "prestart": "npm run generate-icons",
    "start": "electron .",
    "generate-icons": "node scripts/generate-icons.mjs",
    "prebuild": "npm run generate-icons",
    "prebuild-dmg": "npm run generate-icons",
    "build": "electron-builder --mac --x64",
    "build-dmg": "electron-builder --mac --x64"
  },
  "keywords": [
    "lovable",
    "electron",
    "mac"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "com.lovable.app",
    "productName": "Lovable",
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.iconset",
      "identity": null
    },
    "dmg": {
      "icon": "assets/icon.icns"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ]
  }
}
